<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:id="@+id/patient_row"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >
        <TextView 
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:textStyle="bold"
	    	android:paddingLeft="4dp"
	    	android:paddingRight="4dp"
	    	android:text="Patient: " />

        <TextView
            android:id="@+id/app_list_item_first_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="First name" />

	    <TextView android:id="@+id/app_list_item_last_name"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:paddingLeft="4dp"
	    	android:paddingRight="4dp"
	    	android:text="Last name" />
	 </LinearLayout>
	 <LinearLayout
	    android:id="@+id/doctor_row"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" 
        android:layout_below="@id/patient_row">
        <TextView 
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:textStyle="bold"
	    	android:paddingLeft="4dp"
	    	android:paddingRight="4dp"
	    	android:text="Doctor: " />
	     <TextView android:id="@+id/app_list_item_doc_first_name"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:paddingLeft="4dp"
	    	android:paddingRight="4dp"
	    	android:text="First name" />
	    <TextView android:id="@+id/app_list_item_doc_last_name"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:paddingLeft="4dp"
	    	android:paddingRight="4dp"
	    	android:text="Last name" />
	 </LinearLayout>
	 <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" 
        android:layout_below="@id/doctor_row" >
        <TextView 
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:textStyle="bold"
	    	android:paddingLeft="4dp"
	    	android:paddingRight="4dp"
	    	android:text="Date and Time: " />
	     <TextView android:id="@+id/app_list_item_date"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:paddingLeft="4dp"
	    	android:paddingRight="4dp"
	    	android:text="Date" />
	 </LinearLayout>
</RelativeLayout>
